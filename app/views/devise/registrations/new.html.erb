<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2 class="text-center"><%= t('.sign_up') %></h2>
    <br/>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.text_field :name, autofocus: true, placeholder: "Имя", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :lastname, autofocus: true, placeholder: "Фамилия", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Пароль", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t('.sign_up'), class: "btn btn-normal btn-block" %>
      </div>
    <% end %>
    <hr/>
    <%= render "devise/shared/links" %>
  </div>
</div>
