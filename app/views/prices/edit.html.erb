<div class="row">
  <div class="col-md-3">

  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        Цены действительны до
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @price do |f| %>

            <div class="row">
              <div class="col-md-8 form-group">
                <label>Название</label>
                <%= f.text_field :price_date, placeholder: "Цены действительны до ...", class: "form-control", required: true %>
              </div>
            </div>

            <div class="text-center">
              <%= f.submit "Сохранить", class: "btn btn-form" %>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
