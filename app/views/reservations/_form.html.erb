<div class="panel panel-default">
  <div class="panel-heading">
    <span><i class="fa fa-bolt" style="color: #ffb400"></i> <%= @car.price_main %></span>
    <span class="pull-right">за сутки</span>
  </div>

  <div class="panel-body">
    <%= form_for([@car, @car.reservations.new]) do |f| %>
      <div class="row">
        <div class="col-md-6">
          <label>Начало</label>
          <%= f.text_field :start_date, readonly: true, placeholder: "Start Date", class: "form-control datepicker" %>
        </div>
        <div class="col-md-6">
          <label>Окончание</label>
          <%= f.text_field :end_date, readonly: true, placeholder: "End Date", class: "form-control datepicker", disabled: true %>
        </div>
      </div>

      <h4 class="message-alert text-center"><span id="messege"></span></h4>
      <div id="preview" style="display:none">
        <table class="reservation-table">
          <tbody>
            <tr>
              <td>Цена</td>
              <td class="text-right">$<%= @car.price_1 %></td>
            </tr>
            <tr>
              <td>Кол-во суток</td>
              <td class="text-right">x <span id="reservation_nights"></span></td>
            </tr>
            <tr>
              <td class="total">Итого</td>
              <td class="text-right">$<span id="reservation_total"></span></td>
            </tr>
            <tr>
              <td class="deposit">Залог</td>
              <td class="text-right">$<span id="reservation_deposit"></span></td>
            </tr>
          </tbody>
        </table>
      </div>
      <br/>
      <%= f.submit "Book Now", id: "btn_book", class: "btn btn-normal btn-block", disabled: true %>
    <% end %>
  </div>
</div>

<script>
  $(function() {
    $('#reservation_start_date').datepicker({
      dateFormat: 'dd-mm-yy'
    });
    $('#reservation_end_date').datepicker({
      dateFormat: 'dd-mm-yy'
    });
  })
</script>
