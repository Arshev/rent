<div class="row">
  <div class="col-md-3">
    <%= render 'car_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        Остальное 2
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @car do |f| %>
            <div class="row form-group">
              <div class="col-md-6">
                <%= f.check_box :is_air %> Есть кондиционер?
              </div>
              <div class="col-md-6">
                <%= f.check_box :is_electropackage %> Есть электропакет?
              </div>
            </div>
            <br/><br/>

            <div class="text-center">
              <%= f.submit "Save", class: "btn btn-form" %>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
