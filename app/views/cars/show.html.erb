<!-- Image -->
<div class="row">
  <div class="col-md-12">
    <%= image_tag @car.cover_photo(nil), width: "100%" %>
  </div>
</div>
<br/>

<div class="row">
  <!-- LEFT PANEL -->
  <div class="col-md-8">
    <!-- Car name -->
    <div class="row">
      <div class="col-md-8">
        <h1><%= @car.car_name %></h1>
        <%= @car.car_class %>
      </div>
    </div>
    <hr/>

    <!-- Car Info -->
    <div class="row text-babu">
      <div class="row text-center row-space-1">
        <div class="col-md-3">
          <i class="fa fa-home fa-2x"></i>
        </div>
        <div class="col-md-3">
          <i class="fa fa-user-circle-o fa-2x"></i>
        </div>
        <div class="col-md-3">
          <i class="fa fa-bed fa-2x"></i>
        </div>
        <div class="col-md-3">
          <i class="fa fa-bath fa-2x"></i>
        </div>
      </div>
      <div class="row text-center">
        <div class="col-md-3"><%= @car.year %></div>
        <div class="col-md-3"><%= @car.color %></div>
        <div class="col-md-3"><%= @car.transmission %></div>
        <div class="col-md-3">
          <% if @car.is_air == true %>
            Кондиционер
          <% end %>
        </div>
      </div>
    </div>
    <hr/>

    <div class="row text-babu">
      <div class="row text-center row-space-1">
        <div class="col-md-3">
          <i class="fa fa-home fa-2x"></i>
        </div>
        <div class="col-md-3">
          <i class="fa fa-user-circle-o fa-2x"></i>
        </div>
        <div class="col-md-3">
          <i class="fa fa-bed fa-2x"></i>
        </div>
        <div class="col-md-3">
          <i class="fa fa-bath fa-2x"></i>
        </div>
      </div>
      <div class="row text-center">
        <div class="col-md-3"><%= @car.engine_capacity %></div>
        <div class="col-md-3"><%= @car.fuel %></div>
        <div class="col-md-3"><%= @car.number_doors %></div>
        <div class="col-md-3">
          <% if @car.is_electropackage == true %>
            Электропакет
          <% end %>
        </div>
      </div>
    </div>
    <hr/>

    <!-- About -->
    <div class="row">
      <div class="col-md-12">
        <h3>About This Listing</h3>
        <p><%= @car.description %></p>
      </div>
    </div>
    <hr/>

    <!-- Amenities -->
    <div class="row">
      <div class="col-md-3">
        <h4>Цены</h4>
      </div>

      <div class="col-md-9">
        <div class="row">
          <table class="table">
          <thead>
            <tr>
              <th>За 1-3 суток</th>
              <th>За 4-7 суток</th>
              <th>За 8-14 суток</th>
              <th>За 15-30 суток</th>
              <th>Залог</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @car.price_1 %></td>
              <td><%= @car.price_2 %></td>
              <td><%= @car.price_3 %></td>
              <td><%= @car.price_4 %></td>
              <td><%= @car.deposit %></td>
            </tr>
          </tbody>
        </table>
        </div>
      </div>
    </div>
    <hr/>

    <!-- Carousel -->
    <div class="row">

      <% if @photos.length > 0 %>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <% @photos.each do |photo| %>
          <li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
          <% end %>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
          <% @photos.each do |photo| %>
          <div class="item <%= 'active' if photo.id == @photos[0].id %>">
            <%= image_tag photo.image.url() %>
          </div>
          <% end %>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <% end %>

    </div>
    <hr/>

  </div>

  <!-- RIGHT PANEL -->
  <div class="col-md-4">
    <!-- RESERVATION FORM -->
    <%= render 'reservations/form' %>
  </div>
</div>
